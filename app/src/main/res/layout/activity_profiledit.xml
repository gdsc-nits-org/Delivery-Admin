<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/semicircleView"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:background="@drawable/circleicon"
                android:elevation="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvProfile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="51dp"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/semicircleView"
                app:layout_constraintEnd_toEndOf="@id/semicircleView"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/semicircleView"
                app:layout_constraintTop_toTopOf="@+id/semicircleView"
                app:layout_constraintVertical_bias="0.211"
                tools:ignore="TextContrastCheck,HardcodedText"
                />

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:background="@drawable/rounded_back_buttonicon"
                android:contentDescription="Profile"
                android:elevation="50dp"
                android:src="@drawable/baseline_chevron_left_24icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvProfile1"
                app:layout_constraintHorizontal_bias="0.233"
                app:layout_constraintStart_toStartOf="@+id/semicircleView"
                app:layout_constraintTop_toTopOf="@+id/semicircleView"
                app:layout_constraintVertical_bias="0.035"
                tools:ignore="TouchTargetSizeCheck,HardCodedText,DuplicateSpeakableTextCheck,ImageContrastCheck" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/rounded_back_buttonicon"
                android:contentDescription="Todo"
                android:elevation="50dp"
                android:padding="10dp"
                android:src="@drawable/usericon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/semicircleView"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/semicircleView"
                app:layout_constraintTop_toTopOf="@+id/semicircleView"
                app:layout_constraintVertical_bias="0.133"
                app:tint="@color/mediumGrey"
                tools:ignore="HardcodedText"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/btnSave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.144">

                <TextView
                    android:id="@+id/tvEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:clickable="true"
                    android:drawablePadding="4dp"
                    android:focusable="true"
                    android:text="@string/editad"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/edittext_iconicon"
                    tools:ignore="TouchTargetSizeCheck" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout1"
                    style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nameadmin"
                    app:boxStrokeColor="@color/mediumOrange"
                    app:endIconMode="clear_text"

                    app:helperTextTextColor="@color/mediumRed"
                    app:hintTextColor="@color/hint_text_selectorad"
                    app:startIconDrawable="@drawable/usericon">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:hint="@string/nameadmin"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout2"
                    style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/emailadmin"
                    app:boxStrokeColor="@color/mediumOrange"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/mediumRed"
                    app:hintTextColor="@color/hint_text_selectorad"
                    app:startIconDrawable="@drawable/emailicon">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:hint="@string/emailadmin" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout3"
                    style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/contact_noadmin"
                    app:boxStrokeColor="@color/mediumOrange"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/mediumRed"
                    app:hintTextColor="@color/hint_text_selectorad"
                    app:startIconDrawable="@drawable/baseline_call_24icon">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/contact_noadmin"
                        android:enabled="false"
                        android:inputType="phone"
                        android:maxLength="10" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout4"
                    style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bioadmin"
                    app:boxStrokeColor="@color/mediumOrange"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/mediumRed"
                    app:hintTextColor="@color/hint_text_selectorad">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:hint="@string/bioadmin" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mediumOrange"
                android:enabled="false"
                android:text="@string/saveadmin"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.434"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.936" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>